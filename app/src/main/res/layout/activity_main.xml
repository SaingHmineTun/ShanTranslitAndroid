<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:orientation="vertical"
        android:weightSum="5"
        android:padding="5dp"
>
    <EditText android:layout_width="match_parent"

              android:id="@+id/input"
              android:layout_height="0dp" android:layout_weight="2.25" android:autofillHints="Input" android:hint="Input"
              android:inputType="textMultiLine"/>
    <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight=".5"
                  android:weightSum="2">
        <Button android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"
                android:text="Convert"
                android:id="@+id/btConvert"
                style="?android:attr/buttonBarButtonStyle"/>
        <Button android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"
                android:text="Clear" style="?android:attr/buttonBarButtonStyle"
        android:id="@+id/btClear"/>
    </LinearLayout>
    <EditText
            android:id="@+id/output"
            android:layout_width="match_parent" android:inputType="textMultiLine" android:layout_height="0dp"
            android:layout_weight="2.25"
            android:hint="Output" android:autofillHints=""/>

</LinearLayout>